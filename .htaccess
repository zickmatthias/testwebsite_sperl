# Compression and caching rules for Apache
# Gzip/Brotli compression
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/css application/javascript application/json image/svg+xml application/xml+rss
</IfModule>
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json image/svg+xml
</IfModule>

# Cache static assets for a long time and use immutable where appropriate
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(css|js|jpg|jpeg|png|webp|svg|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Prevent caching for PHP and HTML that may change
  <FilesMatch "\.(php|html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>

# Security headers (optional)
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header always append X-Frame-Options "SAMEORIGIN"
</IfModule>

<Files ".env">
    Require all denied
</Files>

<IfModule mod_rewrite.c>
  RewriteEngine On
  # deny any request for a file/dir starting with a dot
  RewriteRule "(^|/)\." - [F]
</IfModule>

# Explicitly block .env (fallback if mod_rewrite not available)
<IfModule mod_authz_core.c>
  <FilesMatch "^\.env$">
    Require all denied
  </FilesMatch>

  # block common sensitive files
  <FilesMatch "(^\.git|^composer\.json$|composer.lock$|package(-lock)?\.json$|^\.ht)">
    Require all denied
  </FilesMatch>
</IfModule>

<IfModule !mod_authz_core.c>
  # Apache 2.2 fallback
  <FilesMatch "^\.env$">
    Order allow,deny
    Deny from all
  </FilesMatch>
</IfModule>